<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.games.mapper.OnLineOrderMapper">

    <resultMap type="com.ruoyi.games.domain.OnLineOrder" id="OnLineOrderResult">
        <result property="orderID" column="OrderID"/>
        <result property="applyDate" column="ApplyDate"/>
        <result property="payAmount" column="PayAmount"/>
        <result property="orderStatus" column="OrderStatus"/>
        <result property="shareID" column="ShareID"/>
    </resultMap>

    <select id="getOnLineOrderList" parameterType="com.ruoyi.games.domain.OnLineOrder"
            resultMap="OnLineOrderResult">
        select *
        from RYTreasureDB.dbo.OnLineOrder
        WHERE 1 = 1
          AND ShareID in (201, 202, 99998)
          AND UserID = #{userID}
          AND PayAmount > 0
        ORDER BY ApplyDate DESC
        offset #{pageNum} row fetch next #{pageSize} row only
    </select>

    <select id="getOnLineOrderCount"  resultType="int">
        select count(1)
        from RYTreasureDB.dbo.OnLineOrder
        WHERE 1 = 1
          AND ShareID in (201, 202, 99998)
          AND UserID = #{userID}
          AND PayAmount > 0
    </select>

</mapper> 